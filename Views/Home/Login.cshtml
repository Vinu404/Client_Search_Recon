@model ClientserachUtiliy.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />


    <link href="~/Content/Login/Login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <title>Login</title>
</head>

<body>

    <style>
        #img1 {
            margin-left: 19px;
            margin-top: -82px;
            width: 64mm;
            height: 18rem;
        }

        #logindiv {
            max-width: 350px;
            padding: 28px 28px;
            margin: 35mm 0rem 0rem 46rem;
            /*filter: drop-shadow(4.735px 6.444px 10.5px rgba(0,0,0,0.14));*/
            border-radius: 10px;
            background-color: #fff;
            box-shadow: black 2px 1px 10px;
        }

        .container {
            background-image: url('../../Content/IMG/unnamed.png');
            width: 100%;
            height: 100vh;
            background-size: cover;
            background-color: rgba(0,0,0,0.1);
        }
    </style>

    @Html.Partial("_Loading")

    <div class="container">

        <div id="logindiv" class="card card-container">
            <img id="img1" src="~/Content/IMG/motilal_oswal-01.png" />
            <p style="color: black; padding-right: 3rem;margin-top:-44px" id="profile-name" class="profile-name-card">Login</p>
            <br />

            <div class="form-signin">

                <input class="form-control" id="UserID" name="UserID" placeholder="Enter UserID" required type="text">
                @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "text-danger" })

                <input class="form-control" id="Password" name="Password" placeholder="Enter Password" required type="password">
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                <br />
                <div>
                    <input type="submit" id="btnLogin" class="btn btn-lg btn-primary btn-block btn-signin" onclick="Login()" value="Login" />
                    <br />

                </div>

            </div>

            <span id="msg" style="font-size: 1.5rem; padding-left: 8rem; margin-top: 1rem;"></span>

        </div>

    </div>
</body>
</html>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/Custom/Login.js"></script>
