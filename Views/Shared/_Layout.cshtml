                            <li><a style="color:black" href="@Url.Action("GetdetailsCilent", "Client")">Single Text File</a></li>
                            <li><a style="color:black" href="@Url.Action("UploadFile", "Client")">Bulk File</a></li>
                        </ul>
                    <li><strong style="font-size: 15px; font-weight: bolder;">|</strong></li>

                    <li>@Html.ActionLink("Dowload Excel File", "DowloadExcelFile", "Client")</li>
                    <li><strong style="font-size: 15px; font-weight: bolder;">|</strong></li>
